<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csg.HelloAndroid.BlankFragment_1">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/sampleRateDesc"
        android:id="@+id/idSampleRateDesc"
        android:gravity="right|center_vertical"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/fileName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sampleRate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/sampleRate"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/idFileNameDesc" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/fileNameDesc"
        android:id="@+id/idFileNameDesc"
        android:gravity="right|center_vertical"
        android:layout_above="@+id/my_button"
        android:layout_alignTop="@+id/fileName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileName"
        android:inputType="textUri"
        android:layout_below="@+id/sampleRate"
        android:layout_alignEnd="@+id/sampleRate"
        android:layout_toEndOf="@+id/idFileNameDesc" />

    <Button android:id="@+id/my_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/StartRecording"
        android:layout_below="@+id/fileName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/acclTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_button"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/gyroTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acclTextView"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

</RelativeLayout>
